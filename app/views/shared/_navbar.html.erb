<% if user_signed_in? || admin_signed_in? %>
  <div class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <div>
        <%= link_to "Home", root_path, class: "col-2 navbar-brand" %>
      </div>
      <div class="d-flex justify-content-center align-items-center">
        <div class="me-3"> Welcome, 
        <% if user_signed_in? %>
          <%= current_user.username %> </div>
          <%= link_to "Sign out", user_logout_path, data: { turbo_method: :delete } , class: "btn btn-dark" %> 
        <% elsif admin_signed_in? %>
          <%= current_admin.username %> </div>
          <%= link_to "Sign out", destroy_admin_session_path, data: { turbo_method: :delete } , class: "btn btn-dark" %> 
        <% end %>
      </div>
    </div>
  </div>
<% end %>
